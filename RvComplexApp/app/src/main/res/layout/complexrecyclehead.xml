<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="32dp"
              android:orientation="horizontal"
              android:id="@+id/complexHead"
              android:background="#ffd9d9d9"
>
    <com.example.wujunfeng.recyclerviewcomplexapplication.complexrecyclerviewtool.cellsview.CellScroll android:layout_width="wrap_content"
                                                                   android:layout_height="match_parent"
                                                                   android:id="@+id/cellScrollHeadLeft"
    />
    <com.example.wujunfeng.recyclerviewcomplexapplication.complexrecyclerviewtool.cellsview.CellOut android:layout_width="0dp"
                                                                android:layout_height="match_parent"
                                                                android:id="@+id/celloutHead"
                                                                android:layout_weight="1"
    >
        <com.example.wujunfeng.recyclerviewcomplexapplication.complexrecyclerviewtool.cellsview.CellScroll android:layout_width="wrap_content"
                                                                       android:layout_height="match_parent"
                                                                       android:id="@+id/cellScrollHeadRight"
        />
    </com.example.wujunfeng.recyclerviewcomplexapplication.complexrecyclerviewtool.cellsview.CellOut>
</LinearLayout>