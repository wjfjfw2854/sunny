<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="vm"
            type="cn.wjf.apphan.frags.vm.HandVm" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <EditText
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/ed1"
            android:textColor="#ff8f"
            android:textSize="20sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/ed2"
            app:layout_constraintBottom_toTopOf="@+id/but1"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:id="@+id/but1"
            android:textSize="22sp"
            android:textColor="#ff55"
            android:text="告之2"
            app:layout_constraintTop_toBottomOf="@+id/ed1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@+id/ed1"
            app:layout_constraintRight_toRightOf="@+id/ed1"
            />
        <EditText
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/ed2"
            android:textColor="#f39f"
            android:textSize="20sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/ed1"
            app:layout_constraintBottom_toTopOf="@+id/but2"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:id="@+id/but2"
            android:textSize="22sp"
            android:textColor="#f595"
            android:text="回答1"
            app:layout_constraintTop_toBottomOf="@+id/ed2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@+id/ed2"
            app:layout_constraintRight_toRightOf="@+id/ed2"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
